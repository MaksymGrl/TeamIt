<div class="container mt-5">
    <!-- Validation Summary with alert styling -->
    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

    <!-- Card component to wrap the form -->
    <div class="card shadow-sm p-4 bg-light" style="max-width: 500px; margin: auto; border-radius: 10px;">
        <div class="card-body">
            <h4 class="card-title mb-4">Phone Number Authentication</h4>
            
            <!-- The form -->
            <form asp-action="VerifyPhoneNumberLogin" method="post">
                <input type="hidden" name="PhoneNumber" value="@ViewBag.PhoneNumber" />
                <div class="form-group">
                    <label for="VerificationCode" class="form-label">Please enter the code sent to your number</label>
                    <input type="text" name="VerificationCode" class="form-control form-control-lg" required />
                </div>
                
                <!-- Submit button -->
                <button type="submit" class="btn btn-primary btn-block mt-3">
                    <i class="fas fa-paper-plane"></i> Submit
                </button>
            </form>
        </div>
    </div>
</div>

<!-- CSS to add a background image -->
<style>
    body {
        background: url('/backgroundAuth.jpg') no-repeat center center fixed;
        background-size: cover;
    }

    .card {
        background-color: rgba(255, 255, 255, 0.8); 
    }
</style>

