@model TeamIt.Models.Conversation

<h2>Create a New Conversation</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="Title">Conversation Title</label>
        <input type="text" name="title" class="form-control" placeholder="Enter conversation title" required />
    </div>
    
    <div class="form-group">
        <label for="isGroup">Is this a group conversation?</label>
        <input type="checkbox" name="isGroup" />
    </div>
    
    <button type="submit" class="btn btn-primary">Create Conversation</button>
</form>